{
  "name": "aragon-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Aragon Desktop",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": "https://github.com/aragon/aragon-desktop",
  "keywords": [
    "aragon"
  ],
  "author": "Aragon Association <legal@aragon.org>",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.38.5",
    "electron-rebuild": "^1.8.2"
  },
  "dependencies": {
    "@akashaproject/ipfs-connector": "^1.10.32",
    "@aragon/apm": "^3.0.0",
    "electron-json-storage": "^4.1.3",
    "electron-window-state": "^5.0.1",
    "eth-provider": "^0.1.4",
    "web3": "^1.0.0-beta.34",
    "web3-providers-ws": "^1.0.0-beta.34"
  },
  "build": {
    "appId": "org.aragon.desktop",
    "productName": "Aragon Desktop",
    "artifactName": "${productName}.${ext}",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business"
    }
  }
}
